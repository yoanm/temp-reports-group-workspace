{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2015", // Must be the NCC target !
    "module": "es2015", // Must be the NCC target !
    "moduleResolution": "node", // In order to avoid issue with NCC !
    "declaration": true, // Generate d.ts files
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": ["./dist", "./tests"]
}
